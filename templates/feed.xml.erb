<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title><%= title %></title>
  <link rel="self" type="application/atom+xml" href="<%= canonical_url %>"/>
  <link rel="alternate" type="text/html" href="<%= root_url %>"/>
  <updated><%= Time.now.iso8601 %></updated>
  <author>
    <name>Ryo Nakamura</name>
  </author>
  <id>tag:r7kamura.com,2019:/</id>
  <% @articles.each do |article| %>
    <entry>
      <title><%= article.title %></title>
      <link rel="alternate" type="text/html" href="<%= "#{request.base_url}#{article.canonical_path}" %>"/>
      <id>tag:r7kamura.com,2019:<%= article.canonical_path %></id>
      <published><%= article.published_at.iso8601 %></published>
      <updated><%= article.updated_at.iso8601 %></updated>
      <content type="html"><%= escape_html(article.rendered_body) %></content>
    </entry>
  <% end %>
</feed>
