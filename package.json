{
  "name": "r7kamura.com",
  "version": "1.0.0",
  "description": "The source of https://r7kamura.com/.",
  "dependencies": {},
  "devDependencies": {
    "chokidar-cli": "^2.1.0",
    "dayjs": "^1.8.17",
    "glob": "^7.1.6",
    "glob-promise": "^3.4.0",
    "gray-matter": "^4.0.2",
    "marked": "^0.7.0",
    "mustache": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "serve": "^11.2.0"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:css": "cp -ru css/ dist/",
    "build:feed": "node scripts/feed.js",
    "build:mustache": "node scripts/html.js",
    "build:sitemap": "node scripts/sitemap.js",
    "build:static": "cp -ru static/* dist/",
    "setup": "rm -rf dist && mkdir -p dist/articles",
    "watch": "run-p watch:*",
    "watch:chokidar": "chokidar 'articles/**/*.md' 'css/**/*.css' 'scripts/html.js' 'templates/**/*.mustache' -c 'npm run build'",
    "watch:serve": "serve dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/r7kamura/r7kamura.com.git"
  },
  "author": "Ryo Nakamura",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/r7kamura/r7kamura.com/issues"
  },
  "homepage": "https://r7kamura.com/",
  "private": true
}
